/* drop table disciplina,curso; */
create table curso(
    id serial primary key,
    nome varchar(100) not null unique,
    ch int not null default 0
);

create table disciplina(
    id serial primary key,
    nome varchar(100) not null unique,
    ch int null default 0,
    numero int not null
);
create table curso_disciplina(
    curso_id int not null,
    disciplina_id int not null,
    primary key(curso_id,disciplina_id),
    foreign key(curso_id)not null references curso(id)
        on delete restrict
        on update cascade,
    foreign key(disciplina_id)not null references disciplina(id)
        on delete restrict
        on update cascade
);